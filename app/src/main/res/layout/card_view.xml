<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/r1"
            android:layout_margin="3dp"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <com.meg7.widget.CircleImageView
                android:id="@+id/head_view"
                android:layout_width="30dp"
                android:src="@drawable/head1"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:layout_height="27dp" />
            <TextView
                android:layout_width="wrap_content"
                android:text="husterkang"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/head_view"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_width="30dp"
                android:src="@drawable/plus"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:layout_height="30dp" />
        </RelativeLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/test"
            android:id="@+id/card"
            android:scaleType="centerCrop"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:id="@+id/r2"
            android:layout_margin="3dp"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <ImageView
                android:id="@+id/favor"
                android:layout_width="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="4dp"
                android:src="@drawable/favor"
                android:layout_height="30dp" />
            <ImageView
                android:id="@+id/comment"
                android:layout_width="30dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/favor"
                android:layout_marginLeft="8dp"
                android:src="@drawable/comment"
                android:layout_height="30dp" />
            <ImageView
                android:id="@+id/share"
                android:layout_width="30dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/comment"
                android:layout_marginLeft="8dp"
                android:src="@drawable/share"
                android:layout_height="30dp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_margin="3dp"
            android:layout_width="match_parent"
            android:layout_height="20dp">
            <ImageView
                android:id="@+id/favor_active"
                android:src="@drawable/favor_active"
                android:layout_centerVertical="true"
                android:layout_marginLeft="4dp"
                android:layout_width="15dp"
                android:layout_height="15dp" />
            <TextView
                android:id="@+id/favor_action_time"
                android:layout_toRightOf="@+id/favor_active"
                android:text="35800次赞"
                android:layout_centerVertical="true"
                android:layout_marginLeft="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/viewers"
                android:src="@drawable/viewers"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/favor_action_time"
                android:layout_marginLeft="6dp"
                android:layout_width="15dp"
                android:layout_height="15dp" />
            <TextView
                android:id="@+id/viewer_time"
                android:layout_toRightOf="@+id/viewers"
                android:text="35800次浏览"
                android:layout_centerVertical="true"
                android:layout_marginLeft="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/comment_tv_1"
                android:text="eslab  真漂亮啊aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/comment_tv_2"
                android:text="sunoff  户田惠梨香哦dssssssssssssssssssss"
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/comment_tv_more"
                android:text="查看更多评论"
                android:singleLine="true"
                android:layout_margin="0dp"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
